<div class="d-flex">
   <div class="d-none d-lg-block">
      <img class="signup-img" src="/images/cantante-microfono.jpg" alt="">
   </div>
   <div class="flex-grow-1">
      <form class="formulario-registro mx-auto mt-5" action="/auth/signup" method="POST">
         <h1>¡Estás a un paso!</h1>
         <h3>Datos Requeridos</h3>
         <label for="nombre"> 
            Nombre
         </label>
         <input name="nombre" class='form-control valid' type="text" placeholder="Ingrese su Nombre" id="nombre">
         <label for="apellido"> 
            Apellido
         </label>
         <input class='form-control valid' name='apellido' type="text" placeholder="Ingrese su Apellido" id="apellido">
         <label for="correo"> 
            Correo
         </label>
         <input class='form-control valid' name='correo' type="email" placeholder="Ingrese su Correo" id="correo">
         <label for="password"> 
            Contraseña
         </label>
         <input class='form-control valid' name='password' type="password" placeholder="Ingrese su contraseña" id="password">
         <button id="submit" type="submit" disabled>Registarse</button>
         <p class="cuenta">¿Ya tienes cuenta? <a class="link" href="http://localhost:3000/auth/login">Inicia Sesion</a></p>
         
         {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p> 
         {{/if}}
      </form>
        
   </div> 
</div>

<script src="/js/validaciones.js"></script>
