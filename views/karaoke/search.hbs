<div class="container mt-5">
    <h2>Busca tu canción</h2>
    <form class="input-group mb-3 list-group" action="/karaoke/search" method="post">
        <div class="d-flex">
            <input class="border flex-grow-1 rounded-start list-group-item" name="busqueda" type="text" placeholder="Busca tu canción">
            <button class="border rounded-end p-3"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    </form>
    <img src="" alt="">

    <div class="list-group">
        {{#each items}}
            <div class="list-group-item d-flex align-items-center">
                
                <img src="{{snippet.thumbnails.default.url}}" alt="">
                <p class="flex-grow-1 mx-3">{{snippet.title}}</p>
                
                <form action="/karaoke/list" method="post">
                    <input type="hidden" value="{{id.videoId}}" name="videoId">
                    <button class="btn btn-dark"><i class="fa-solid fa-plus"></i></button>
                </form>
            </div>
        {{/each}}
    </div>
</div>
